<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".activity.ManHinhDangNhap"
    android:padding="16dp">

    <!-- Logo ứng dụng -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/logoungdung"
        android:contentDescription="Logo ứng dụng"
        android:scaleType="fitCenter"
        android:layout_marginBottom="20dp" />

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chào mừng bạn đã trở lại"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#2296f3"
        android:textSize="18sp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng đăng nhập để tiếp tục"
        android:textStyle="bold"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Nhập email -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập email"
            android:inputType="textEmailAddress"
            android:backgroundTint="#e0e0e0" />
    </com.google.android.material.textfield.TextInputLayout>




    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:backgroundTint="#e0e0e0" />
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/chkghinho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ghi nhớ tài khoản"
        android:layout_marginBottom="20dp" />

    <!-- Button Đăng nhập và Thoát -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btndangnhap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Đăng Nhập"
            android:backgroundTint="#09f420"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnthoat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Thoát"
            android:backgroundTint="#f45b09"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Quên mật khẩu -->
    <TextView
        android:id="@+id/btn_text_clickable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu?"
        android:textColor="#007BFF"
        android:textStyle="bold"
        android:gravity="end"
        android:layout_gravity="end"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Nhắc nhở đăng ký -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:text="Nếu bạn chưa có tài khoản"
        android:layout_marginBottom="10dp" />

    <!-- Button Đăng ký -->
    <Button
        android:id="@+id/btndenmanhinhdangky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng Ký"
        android:backgroundTint="#09a9f3"
        android:textColor="#FFFFFF" />

</LinearLayout>
