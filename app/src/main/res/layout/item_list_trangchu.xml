<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:padding="8dp"
            android:gravity="center_horizontal">

            <!-- FrameLayout để chứa lớp phủ và ImageView -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- ImageView hiển thị ảnh phim -->
                <ImageView
                    android:id="@+id/imgphimmoi"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:src="@drawable/mat_biec"
                    android:scaleType="centerCrop" />


                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                    <LinearLayout
                        android:background="@drawable/backgroud_nho"
                        android:layout_width="30dp"
                        android:layout_height="17dp"
                        android:orientation="horizontal"
                        android:gravity="start">


                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/star_2b50" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="4.5"
                            android:textColor="@color/white"
                            android:textSize="5sp" />
                    </LinearLayout>



                    <LinearLayout
                    android:id="@+id/viewyeuthich"
                    android:layout_width="23dp"
                    android:layout_height="16dp"

                    android:background="@drawable/backgroud_nho"

                    android:layout_marginEnd="0dp"
                    >
                    <ImageView
                        android:src="@drawable/heart_ic"
                        android:layout_gravity="center"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        />
                </LinearLayout>
            </LinearLayout>

            </FrameLayout>

            <!-- TextView hiển thị tiêu đề phim -->
            <TextView
                android:id="@+id/titlephimmoi"
                android:text="Film 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:gravity="center_horizontal" />

        </LinearLayout>
    </GridLayout>
</LinearLayout>
